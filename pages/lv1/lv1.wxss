page {
  background-color: #fff;
}

.page-body {
  padding-bottom: 30rpx;
}

.page-section {
}

.swiper_item {
  height: 150px;
  background-color: #efefef;
}

.title {
  box-sizing: border-box;
  margin-top: 45rpx;
  padding: 0 0;
  height: 90rpx;
}

.content {
  box-sizing: border-box;
  margin-top: 45rpx;
  padding: 0 24rpx 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

.content_bg {
  background-color: rgba(252, 252, 252, 1);
  padding: 20rpx;
}

.mark_pic {
  margin-top: -30rpx;
  width: 62rpx;
  height: 49rpx;
  display: block;
  margin-bottom: 20rpx;
}

.content_text {
  margin-bottom: 30rpx;
  display: block;
  line-height: 54rpx;
  letter-spacing: 2rpx;
  text-indent: 60rpx;
}

.address {
  margin: 0 auto;
  display: flex;
  flex-direction: row;
}

.address_left {
  box-sizing: border-box;
  width: 210rpx;
  padding: 20rpx;
}

.address_right {
  flex: 1;
  padding-left: 16rpx;
}

.row {
  letter-spacing: 0rpx;
  line-height: 52rpx;
}
