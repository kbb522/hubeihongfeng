page {
  background: #f9f9f9;
}

.container {
  padding: 24rpx;
}

.li {
  padding: 28rpx;
  display: flex;
  background: white;
  margin-bottom: 24rpx;
}

.left {
  flex: 1;
}

.date {
  color: #159b52;
  line-height: 1;
  height: 47rpx;
  font-size: 18rpx;
  letter-spacing: 2rpx;
  padding-top: 16rpx;
  position: relative;
}

.day {
  font-size: 36rpx;
}

.daytop {
  position: absolute;
  top: 0rpx;
  left: 2rpx;
  width: 16rpx;
  height: 6rpx;
  background: #159b52;
}

.yearmonth, .day {
  line-height: 1;
  vertical-align: bottom;
}

.title {
  margin-top: 12rpx;
  color: #303030;
  font-size: 28rpx;
  line-height: 44rpx;
  letter-spacing: 1rpx;
  padding-right: 40rpx;
}

.right {
  width: 226rpx;
  height: 177rpx;
}
